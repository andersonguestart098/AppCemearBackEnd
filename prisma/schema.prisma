datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Post {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  titulo      String
  conteudo    String
  imagePath   String? // Novo campo adicionado para armazenar o caminho da imagem
  created_at  DateTime @default(now())
}

model Event {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  date        DateTime
  descricao   String
}

model File {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  filename    String
  originalname String
  mimetype     String
  path         String
}

model Subscription {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  endpoint    String
  p256dh      String
  auth        String
  userId      String   // ID do usu√°rio associado
  user           User     @relation(fields: [userId], references: [id]) // Relacionamento com o modelo User
  createdAt   DateTime @default(now())
  expirationTime DateTime?
  keys        String
}

model User {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  usuario     String   @unique
  subscriptions Subscription[]
  password    String
  tipoUsuario String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
